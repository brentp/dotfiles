alias jython="java -jar /opt/src/jython/dist/jython.jar"
alias ar="sudo apache2ctl restart"
alias alog="tail /var/log/apache2/error.log"
alias flashplayer="/opt/src/flash9player/flash_player_9_linux_dev/standalone/debugger/flashplayer"
alias mpmi="make clean; perl Makefile.PL; make; sudo make install"
alias mxmlc="/opt/src/flex2/bin/mxmlc"
alias fcsh="/usr/bin/rlwrap /opt/src/flex2/bin/fcsh"
alias doctest="nosetests --with-doctest --doctest-extension=.txt"

alias nlog="tail /usr/local/nginx/logs/error.log"
alias nrestart="sudo /etc/init.d/nginx stop; sleep 0.3; sudo /etc/init.d/nginx start"

alias grep="grep --color=auto"
